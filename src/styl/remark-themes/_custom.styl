.cover-art
  background-position top
  h1
    width 41%
    font-size 3.5em
    text-align right
    right 15px
    top 15px
    border 4px solid $brand-white-text
    box-shadow 1px 4px 10px $brand-alt
  &.inverse
    text-shadow none
  .about
    left auto
    right 15px
    bottom 15px
    text-align right
    border 4px solid $brand-white-text
    box-shadow 1px 4px 10px $brand-alt
    h3 i
      margin-left .5rem
  .while-waiting
    background-color $brand
    padding 1rem
    position absolute
    text-align right
    right 15px
    top 213px
    border 4px solid $brand-white-text
    box-shadow 1px 4px 10px $brand-alt
    a
      color $brand-white-text

.level-2.bold-statement
  h3
    font-size 5em
    margin-top 1.88em
    text-align center
    padding-left 0

.title:not(.cover-art):not(.inverse) h1
  border: 4px solid $brand-white-tex3333t;
  box-shadow: 1px 2px 4px $brand-alt
  color: white;
  background-color: $brand;
  position: absolute;
  display: inline-block;
  padding: 1rem 3rem;
  top: 15px;
  left: 15px;

.inverse:not(.image)
  color $brand-white-text
  background-color $brand
  text-shadow none
  &.bold-statement
    h1
      background none
      border none
      position relative
      top none
      left none
  .remark-slide-number
    color $brand-white-text
    opacity 1.0
  
.full-width p
  width 100%
  img
    width 100%

.title.module
  h1
    padding-bottom 2rem
    margin-bottom 2rem
    border-bottom 5px solid $brand-alt

.all-changes-require ol
  min-width 72%

.collaborative ul
  min-width 40%

.centered-image p
  position: relative;
  left: 50%;
  transform: translateX(-50%);

.content.level-1.schedule ul
  font-size 1.8em
  line-height 1.3em

.css-modules>p
  display flex
  justify-content center
  img
    width 25%
    height 25%